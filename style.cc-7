 @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
 :root {
  --purple500: #281154;
  --purple300: #270082;
  --purple600: #1b0058; 
  --red600: #dc0000;
  --body: #f9f6ff;
  --max-width: 1200px;
}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html{
  font-size: 62.5%;
}
body {
  font-family: "Roboto", sans-serif;
  font-weight: 300;
  line-height: 1.4;
 scroll-behavior: smooth;
    font-size: 1.6rem;
}
body::-webkit-scrollbar{
  display: none;
}
section{
  scroll-margin: 4.5rem;
}
.hero-section{
  scroll-margin: 3rem;
 }
ul{
  list-style: none;
}
 a{
  text-decoration: none;
    color: white;  
} 
.container{
  max-width: 120rem;
  margin: 0 auto;
 padding: 0 2rem;
} 
header{
  background-color: var( --purple300);
   position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0.5rem 0.5rem 0.5rem rgba(0, 0, 0, 0.5);
}
nav{
  display: flex;
   justify-content: space-between;
   color: white; 
   align-items: center;
  padding: 2rem 0;
}
.logo{
  font-size: 3.2rem;
  font-weight: 600;
}
button {
  padding: 1rem 1.5rem;
  border: none;
  transition: 0.2s ease-in-out;
}
button:hover{
  transition: 0.2s ease-in-out;
  opacity: 0.8;
}
nav ul{
  display: flex;
  gap: 2rem; 
}

nav ul li{
  border-bottom: 0.2rem solid transparent;
  transition: 0.2s ease-in;
}
nav ul li:hover{
  border-bottom:  0.2rem solid brown;
  color:brown;
  transition: 0.2s ease-in;
}
.hero-section {
  background-image: url(p-7-3.jpg);
 height:100vh;
    width: 100%;
     /* background-position: center;
    background-repeat: no-repeat;
    background-size: cover; */
  display: grid;
  color: white;
  place-items: center;
  text-align: center;
}
.hero-section .container{
  display: flex;
  flex-direction: column;
  gap: 3rem;
}
.hero-section h1{
  font-size: 9.6rem;
}
.hero-section h3{
  font-size: 3.2rem;
}
.hero-section p{
  font-weight: 350;
  font-size: 1.5rem;
}
.music-section{
  padding-top: 5rem;
  background: var(--purple500);
  height: 60rem;
}
.music-section .container{
  display: flex;
  flex-direction: column;
  gap: 3rem;
   justify-content: center;
  align-items: center;  
   color: white; 
}
.music-player{
   margin-top: -40rem;
  position: relative;
  top: 40rem;  
  width: 100rem;
  height: 50rem;
  /* border: 2px solid red; */
  overflow: auto;
  /* background-color: gray; */
} 
.music-player::-webkit-scrollbar{
  display: none;
}
.primary-btn{
  background-color: var(--red600);
  color: white;
  box-shadow: 0.5rem 0.5rem 0.6rem rgba(0, 0, 0, .5);
}
.primary-btn:hover{
  background-color: var(--purple300);
 transform: scale(1.5,1.5);
}
.primary-btn2{
  background-color: var(--purple500);
  color: white;
 margin-left: 15rem;
 box-shadow: 0.5rem 0.5rem 0.6rem rgba(0, 0, 0, .5);
 
}
.primary-btn2:hover{
  background-color: var(--red600);
 transform: scale(1.5,1.5);
}
.music-list{
  margin-top: 39rem;
   
}
.music-list h4{
  color: var(--purple500);
  padding-bottom: 1.5rem;
  font-size: 5rem;
  font-style: italic;
}
.secondary-btn{
  background-color: var(--purple300);
  color: white;
  box-shadow: 0.5rem 0.5rem 0.6rem rgba(0, 0, 0, .5);
}
.secondary-btn:hover{
  background-color: var(--red600);
 transform: scale(1.5,1.5);
}
.about-music{
  padding-top: 50rem;
  display: grid;
  place-items: center;
  gap: 5rem;
  text-align: center;
  margin-bottom: 5rem;
}
.video-section{
  background-image: url(p-7-2.jpg);
  min-height: 80rem;
  display: grid;
  /* place-items: center;
  color: white; 
  text-align: center; */
}
