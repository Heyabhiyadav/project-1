.menu_mobile{
  background: var(--purple500);
  top: 0; 
 position:absolute; 
 width: 100%; 
 height: 50vh;
transform: translateX(100vw); 
transition: 0.3s ease-in;
} 
.menu_mobile ul{
  font-size: 2rem;
  text-align: center;
}
.menu_mobile ul li{
  padding: 1rem 0;
  transition: 0.3s ease-in;
      }
.menu_mobile ul li:hover{
        background-color:rgb(197, 171, 253);
       color: var(--purple600); 
       transition: 0.3s ease-in; 
          }
.rclose_btn_containe{
            display: flex;
            justify-content: end;
            margin-right: 1rem;
            margin-top: 1rem;
          }       
.show_menu{
  transform: translateX(0);
  transition: 0.3s ease-in-out; 
}

@media (min-width: 768px) {
