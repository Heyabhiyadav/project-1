.gift-section{
  display: flex;
  justify-content: center;
  margin: 10rem 0;
  gap: 5rem;
}
.gift-contant{
  display: flex;
  flex-direction: column;
  gap: 2rem;
}
.footer-upper{
  background-color: var(--purple600);
  padding: 2rem;
}
.footer-upper .container{
     display: flex;
     color: white;
     justify-content: space-between;
}
.footer-upper h4{
  padding-bottom: 1rem;
  border-bottom: 2px solid white;
  margin-bottom: 1rem;
}
.footer-lower{
  background-color: var(--purple300);
  padding: 2rem;
  display: flex;
  justify-content: center;
  color: white;
}
 /* .video-section{
  scroll-margin: -10rem;
} */
.gift-section{
  scroll-margin: 10rem;
} 
.image img{
  width: 5rem;
}
.glass .music-glass{
display: flex;
align-items: center;
flex-flow: column;
}
.glass .music-glass .box{
  height: 16rem;
  width: 80%;
  display: flex;
  align-items: center;
  background: #f9f9f9;
  border-radius: 1rem;
  box-shadow: 0.5rem 1rem  var(--purple500);
  overflow: hidden;
  margin: 2rem;
}
.glass .music-glass .box .image{
  height: 100%;
  width: 100%;
}
.glass .music-glass .box .image img{
  height: 100%;
  width: 100%;
  object-fit: cover;
}
.glass .music-glass .box .music{
  width: 75%;
}
.glass .music-glass .box .music audio{
  width: 100%;
  outline: none;
}
.glass .music-glass .box .music audio::-webkit-media-controls-enclosure{
  background: none;
}

.vidio-container{
display: flex;
justify-content: center;
flex-wrap: wrap;
}
.vidio-container .vidio{
  height: 15rem;
  width: 25rem;
  margin: 2rem;
  box-shadow: 0.5rem 1rem 0.3rem rgba(0, 0, 0, .5);
  border-radius: 0.5 rem;
}
.vidio-container .vidio video{
  height: 100%;
  width: 100%;
  object-fit: cover;
  outline: none;
  border: none;
  cursor: pointer;
}
.vidio-container .vidio video:hover{
  transition: 1s linear;
  transform: scale(1.2);
}
.vidio-container .vidio .active{ 
  position: fixed;  
  top:40%; right:65%; 
  transform: translate(50%, -50%);
  height: auto;
  width: 65%;
  box-shadow: 0 0 0 100vh rgba(0,0,0,.7);
  z-index: 1;
  /* overflow: auto; */
}
 .vidio-container .vidio .active:hover{
   transition: none;
  transform: translate(50%, -50%) scale(1); 
} 

.work{
  display: grid;
  grid-gap: 20px;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  max-width: 1100px;
  margin: 5rem auto;
  /* border: 1px solid red; */
}
.grid-item{
  display: flex;
  justify-content: center;
  align-items: center; 
}
.card{
  max-width: 32rem;
  height: 45rem;
  border-radius: 1rem; 
  box-shadow: 0.3rem 0.5rem 0.5rem rgba(1, 1, 1, 0.2);
  transition: 0.2s ease-in-out;
  padding: 0.2rem;
}
.card:hover{
  transform:scale(1.04) ;
  box-shadow: 0.3rem 0.5rem 0.5rem rgba(1, 1, 1, 0.3);
     transition: 0.2s ease-in-out;
  }
  .card-container{
    padding:0.2rem;
  }
  .card-container h3{
    margin-bottom: 1rem;
  }
  .info{
    margin-top: 38.5rem;
    color: #f9f6ff;
  padding-bottom: 1.5rem;
  font-size: 5rem;
  font-style: italic;
  display: grid;
  place-items: center;
  border: 0.1rem solid black;
  background-color: var(--purple500);
  padding: 0.2rem;
  word-spacing: 0.2rem;
  }
   .about-music-container{
     margin: 4rem 6rem;
     display: grid;
     place-items: center;
     text-align: center;
     /* border: 2px solid red; */
     overflow: auto;
     
  } 
  .about-music-container p{
    padding: 3rem 0;
   
  }
  .about-music-container button{
    margin-bottom: 3rem;
  }
  #history{
    scroll-margin: 4rem;
    margin-top: 3rem;

  }
  .image-container{
    width: 120rem;
  }
  .card-container a{
    color: black;
  }
.mac-img{
  box-shadow: 1rem 1rem 0.8rem rgba(0, 0, 0, .5);
  margin-bottom: 1.5rem;
  
}
.mac-img video{
width:100rem;
}
